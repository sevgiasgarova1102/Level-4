#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Eded daxil edin: ";
    cin >> n;

    if (n == 0) {
        cout << "Binary: 0";
        return 0;
    }

    string binary = "";

    while (n > 0) {
        binary = char((n % 2) + '0') + binary; // son biti əlavə et
        n = n / 2;
    }

    cout << "Binary: " << binary;
    return 0;
}
